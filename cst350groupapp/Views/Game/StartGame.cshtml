@{
    ViewBag.Title = "Start Game";
}

<h2>Start Game</h2>

<p>Welcome to the game! This page is accessible only to logged-in users.</p>

<form asp-action="InitializeGame" method="post">
    <label for="Rows">Number of Rows:</label>
    <input type="number" name="Rows" min="1" required />

    <label for="Columns">Number of Columns:</label>
    <input type="number" name="Columns" min="1" required />

    <p>Select Difficulty:</p>
    <label>
        <input type="radio" name="Difficulty" value="10" required /> Easy (10% bombs)
    </label>
    <label>
        <input type="radio" name="Difficulty" value="20" /> Medium (20% bombs)
    </label>
    <label>
        <input type="radio" name="Difficulty" value="30" /> Hard (30% bombs)
    </label>

    <button type="submit">New Game</button>
</form>

<!-- Add the "View Existing Games" button -->
<form asp-action="ViewGames" method="get">
    <button type="submit">View Existing Games</button>
</form>

